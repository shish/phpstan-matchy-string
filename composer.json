{
    "name": "shish/phpstan-matchy-string",
    "description": "PHPStan rule for strings that match certain conditions",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.1",
        "friendsofphp/php-cs-fixer": "^3.89",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Shish\\PhpstanMatchyString\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Shish",
            "email": "shish@shishnet.org"
        }
    ],
    "scripts": {
        "check": [
            "@format",
            "@analyse",
            "@test"
        ],
        "stan": [
            "@analyse"
        ],
        "format": "php-cs-fixer fix",
        "analyse-ci": "phpstan analyse --error-format=github",
        "analyse": "phpstan analyse --error-format=raw | sed -E 's/:([0-9]+):/:\\1 /'",
        "test": "php -d xdebug.mode=coverage vendor/bin/phpunit"
    }
}
